<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/cerveza">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">

            <TextView
                android:id="@+id/txt_tittle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/id_item_liqueur_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/txt_tittle_type"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/txt_tittle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:layout_below="@id/txt_tittle_type"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/id_item_liqueur_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/txt_tittle_name"
                android:layout_below="@+id/id_item_liqueur_type"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/txt_tittle_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TamaÃ±o:"
                android:layout_below="@+id/txt_tittle_name"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/id_item_liqueur_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/txt_tittle_size"
                android:layout_below="@+id/id_item_liqueur_name"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/txt_tittle_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:layout_below="@+id/txt_tittle_size"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/id_item_liqueur_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/txt_tittle_price"
                android:layout_below="@+id/id_item_liqueur_size"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/txt_tittle_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:layout_below="@+id/txt_tittle_price"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <TextView
                android:id="@+id/id_item_liqueur_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@+id/txt_tittle_description"
                android:layout_below="@+id/id_item_liqueur_price"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/editTextColorWhite"/>
            <CheckBox
                android:id="@+id/chb_like_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/checkbox_selector"
                android:layout_below="@+id/id_item_liqueur_description"/>

        </RelativeLayout>



    </LinearLayout>

</LinearLayout>