<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.licores.licores.Views.Fragments.SearchFragment">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="vertical">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/credits"
           android:textColor="@color/editTextColorBlack"
           android:textSize="40dp"
           android:layout_gravity="center"
           android:padding="10dp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Jonathan David Castro Bucheli"
           android:textColor="@color/editTextColorBlack"
           android:textSize="20dp"
           android:gravity="center"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Mauricio Andres Escobar Pulistar"
           android:textColor="@color/editTextColorBlack"
           android:textSize="20dp"
           android:gravity="center"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Erlis Caicedo Marines"
           android:textColor="@color/editTextColorBlack"
           android:textSize="20dp"
           android:gravity="center"/>
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:src="@drawable/cesmag"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
